<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Definir el appender para la consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Formato de log: incluye fecha, nivel, nombre del logger y mensaje -->
            <pattern>[%thread] %-5level: %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ConfiguraciÃ³n del root logger -->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
